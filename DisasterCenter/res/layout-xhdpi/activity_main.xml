<android.support.v4.widget.SlidingPaneLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main_SlidingPaneLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout 
        android:id="@+id/activity_main_LinearLayout_menu"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginRight="60dp"
        android:background="@drawable/bg_main_menu" >
	 	<ImageView 
			android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:scaleType="fitXY"
	        android:src="@drawable/bg_action_bar_black"  />
    </LinearLayout>
  	<FrameLayout 
  	    android:id="@+id/activity_main_FrameLayout_content" 
  	    android:layout_width="match_parent"
  	    android:layout_height="match_parent"
  	    android:background="@android:color/white" >
  	</FrameLayout>
  
</android.support.v4.widget.SlidingPaneLayout>